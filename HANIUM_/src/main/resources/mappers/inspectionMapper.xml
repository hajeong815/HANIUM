<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="inspectionMapper">

	<select id="getInspectionList" resultType="com.HANIUM.vo.InspectionVO">
		SELECT `id`, `Cda_mapping`, `Inspect_group`, `Inspect_group_list`, `Inspect_checklist`, `Inspect_yn`, `Alter_measure`
		FROM InspectionList
	</select>
	
	<!-- get 기술적 보안조치 보안영역  (UPPER_CODE_TYPE_NO = 1)-->
	<select id="getInsGroupFromStandard" resultType="com.HANIUM.vo.StandardsVO">
		SELECT `id`, `CODE_TYPE_NO`, `CODE_TYPE_NAME`, `UPPER_CODE_TYPE_NO`
		FROM Standards
		WHERE UPPER_CODE_TYPE_NO = 1
	</select>
	
	<!-- get 기술적 보안조치 점검분야  -->
	<select id="getInsGroupListFromStandard" parameterType="int" resultType="com.HANIUM.vo.StandardCodeVO">
		SELECT ss.id, ss.STANDARD_CODE, ss.CODE_TYPE_NO, ss.CODE_NAME, ss.UPPER_STANDARD_CODE
		FROM StandardCode ss JOIN Standards s
		ON ss.CODE_TYPE_NO = s.CODE_TYPE_NO
		WHERE s.UPPER_CODE_TYPE_NO = #{upper_type_no}
		AND ss.UPPER_STANDARD_CODE IS NOT NULL
	</select>
   
</mapper>